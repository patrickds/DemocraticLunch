<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/restaurant_already_chosen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="16dp"
            android:text="@string/restaurant_already_chosen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Outback Steak House"/>

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_name"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Outback Steak House"/>

        <TextView
            android:id="@+id/restaurant_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_address"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Votes: 1"/>

        <Button
            android:id="@+id/vote_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/restaurant_votes"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="@string/vote"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="@color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>